<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <title>English Word Quiz</title>
  <style>
    body { font-family: sans-serif; text-align: center; padding: 40px; }
    #quiz-box { margin-top: 40px; }
    #question { font-size: 24px; margin-bottom: 20px; }
  </style>
</head>
<body>
  <h1>English Word Quiz</h1>
  <div id="quiz-box">
    <div id="question"></div>
    <input type="text" id="answer">
    <button onclick="checkAnswer()">확인</button>
    <div id="result"></div>
  </div>

  <script>
    const words = [
      {en: "declare", ko: "선언하다"},
      {en: "recognition", ko: "인식"},
      {en: "commitment", ko: "약속"}
    ];

    let currentWord;
    let showEnglish;

    function newQuestion() {
      const idx = Math.floor(Math.random() * words.length);
      currentWord = words[idx];
      showEnglish = Math.random() < 0.5;
      document.getElementById("result").textContent = "";
      document.getElementById("answer").value = "";
      document.getElementById("question").textContent = showEnglish ? currentWord.en : currentWord.ko;
    }

    function checkAnswer() {
      const userAnswer = document.getElementById("answer").value.trim();
      const correctAnswer = showEnglish ? currentWord.ko : currentWord.en;
      if (userAnswer === correctAnswer) {
        document.getElementById("result").textContent = "✅ 정답!";
      } else {
        document.getElementById("result").textContent = "❌ 오답! 정답: " + correctAnswer;
      }
      setTimeout(newQuestion, 1500);
    }

    newQuestion();
  </script>
</body>
</html>
